apiVersion: triliovault.trilio.io/v1
kind: BackupPlan
metadata:
  name: {{ tvk_backupplan_name }}
spec:
  backupNamespace: {{ tvk_namespace }}
  backupConfig:
    target:
      name: {{ tvk_target_name }}
  {% if tvk_backupplan_type == 'label' %}
  backupPlanComponents:
    custom:
      - matchLabels:
          {{ tvk_backup_match_label }}
  {% endif %}
